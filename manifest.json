{
  "manifest_version": 3,
  "name": "LinkedIn Profile Scraper",
  "version": "1.0",
  "description": "Scrapes and downloads LinkedIn profile data.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://wts.iie.network/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "ui.js",
        "utils.js",
        "scrapers/basicInfo.js",
        "scrapers/experience.js",
        "scrapers/education.js",
        "scrapers/skills.js",
        "content.js"
      ]
    }
  ]
}